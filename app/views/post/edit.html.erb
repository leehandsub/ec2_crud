<div class="container">
    <form action="/post/update/<%= @post.id%>" method="post">
      <div class="form-group">
        <label for="exampleFormControlInput1">제목</label>
        <input name="title" value="<%= @post.title %>" type="text" class="form-control" id="exampleFormControlInput1" placeholder="제목을 입력하세요.">
      </div>
      <div class="form-group">
        <label for="exampleFormControlTextarea1">내용</label>
        <textarea name="content" class="form-control" id="exampleFormControlTextarea1" rows="10"><%= @post.content %></textarea>
      </div>
      <button type="button submit" class="btn btn-dark">작성하기</button>
    </form>    
</div>