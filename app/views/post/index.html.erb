<%= render "navbar" %>
<div class="container">
    <table class="table table-hover">
      <thead>
        <tr>
          <th scope="col">번호</th>
          <th scope="col">제목</th>
          <th scope="col">작성자</th>
          <th scope="col">작성 날짜</th>
        </tr>
      </thead>
      <tbody>
        <% @post.each do |p| %>
          <tr>
            <th scope="row" style="width:7%; "><%= p.id %></th>
            <td style="width:68%;"><a href="/post/view/<%= p.id %>"><%= p.title %></a></td>
            <td style="width:13%;"><%= p.user.username %></td>
            <td style="width:12%;"><%= p.created_at.to_s.split(' ').first %></td>
          </tr>
        <% end %>
        
      </tbody>
    </table>
    <div style="text-align:right;">
      <a href="/post/new">
        <button type="button" class="btn btn-info">글쓰기</button>
      </a>
    </div>
</div>